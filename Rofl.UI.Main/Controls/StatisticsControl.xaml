<UserControl x:Class="Rofl.UI.Main.Controls.StatisticsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rofl.UI.Main.Controls"
             xmlns:b="clr-namespace:Rofl.UI.Main.Behaviors"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:sys="clr-namespace:System;assembly=mscorlib" 
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="800">

    <i:Interaction.Behaviors>
        <b:BubbleScrollEvent />
    </i:Interaction.Behaviors>

    <DataGrid x:Name="StatsDataGrid"
              AutoGenerateColumns="False"
              ItemsSource="{Binding Path=AllPlayers}"
              HorizontalScrollBarVisibility="Disabled"
              VerticalScrollBarVisibility="Disabled"
              ScrollViewer.CanContentScroll="False"
              IsReadOnly="True"
              CanUserSortColumns="False"
              CanUserResizeColumns="False"
              CanUserReorderColumns="False"
              CanUserResizeRows="False"
              HeadersVisibility="Column"
              Background="Transparent"
              BorderBrush="Transparent"
              GridLinesVisibility="None"
              SelectionUnit="Cell"
              VerticalAlignment="Stretch"
              VerticalContentAlignment="Stretch"
              HorizontalContentAlignment="Stretch"
              HorizontalAlignment="Stretch"
              SizeChanged="StatsDataGrid_SizeChanged"
              BorderThickness="0"
              MinRowHeight="56"
              RowHeight="56"
              Width="2530">

        <DataGrid.ColumnHeaderStyle>
            <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource DefaultDataGridColumnHeaderStyle}">
                <Setter Property="LayoutTransform">
                    <Setter.Value>
                        <TransformGroup>
                            <RotateTransform Angle="90"/>
                        </TransformGroup>
                    </Setter.Value>
                </Setter>
                <Setter Property="Width" Value="165"/>
                <Setter Property="Height" Value="15"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Margin" Value="0"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="Background" Value="{DynamicResource TabBackground}"/>
                <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            </Style>
        </DataGrid.ColumnHeaderStyle>
        <DataGrid.LayoutTransform>
            <TransformGroup>
                <RotateTransform Angle="-90"/>
            </TransformGroup>
        </DataGrid.LayoutTransform>
        <DataGrid.CellStyle>
            <Style TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource DefaultDataGridCellStyle}">
                <Setter Property="LayoutTransform">
                    <Setter.Value>
                        <TransformGroup>
                            <RotateTransform Angle="90"/>
                        </TransformGroup>
                    </Setter.Value>
                </Setter>
                <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Margin" Value="0"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style>
        </DataGrid.CellStyle>
        <DataGrid.RowStyle>
            <Style TargetType="DataGridRow" BasedOn="{StaticResource DefaultDataGridRowStyle}">
                <Style.Triggers>
                    <!--<DataTrigger Binding="{Binding Path=IsBlueTeamMember}" Value="True">
                        <Setter Property="Background" Value="#f5fafe"></Setter>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Path=IsBlueTeamMember}" Value="False">
                        <Setter Property="Background" Value="#fff3f3"></Setter>
                    </DataTrigger>-->
                </Style.Triggers>
            </Style>
        </DataGrid.RowStyle>
