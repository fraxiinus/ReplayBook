            <DataGridTextColumn>
                <DataGridTextColumn.Header>
                    <TextBlock Text="{StaticResource MiscGroupHeaderText}"
                            FontWeight="Bold"/>
                </DataGridTextColumn.Header>
            </DataGridTextColumn>

            <!---->

            <DataGridTextColumn Binding="{Binding Path=Ping, Mode=OneWay, StringFormat={}{0:#,0}}">
                <DataGridTextColumn.Header>
