            </DataGridTextColumn>

            <DataGridTextColumn Binding="{Binding Path=Spell2Casts, Mode=OneWay, StringFormat={}{0:#,0}}">
                <DataGridTextColumn.Header>
                    <TextBlock Text="{StaticResource Spell2CastsHeaderText}"/>
