                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </ui:SimpleStackPanel>
                </ui:SimpleStackPanel>
            </ui:SimpleStackPanel>
            
            <ui:SimpleStackPanel Orientation="Horizontal" DataContext="{Binding PrimaryPathRune1}"
