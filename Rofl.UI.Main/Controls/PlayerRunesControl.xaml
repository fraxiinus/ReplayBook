                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </ui:SimpleStackPanel>
                </ui:SimpleStackPanel>
            </ui:SimpleStackPanel>

            <ui:SimpleStackPanel Orientation="Horizontal" DataContext="{Binding SecondaryPathRune0}"
                                 Grid.Column="2" Grid.Row="1">
                <local:RuneIconControl Width="30" Height="30"
                                       Margin="0 0 10 0"/>
                <ui:SimpleStackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <ui:SimpleStackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <TextBlock Text="A:" Padding="0 0 5 0"
                                       FontWeight="Bold"/>
