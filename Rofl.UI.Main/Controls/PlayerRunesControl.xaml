                                 Grid.Column="3" Grid.Row="1">
                <local:RuneIconControl Width="30" Height="30"
                                       Margin="0 0 10 0"/>
                <ui:SimpleStackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <ui:SimpleStackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <TextBlock Text="A:" Padding="0 0 5 0"
                                       FontWeight="Bold"/>
                        <TextBlock Text="{Binding Value0}"
                                   TextAlignment="Left"
                                   Width="40" VerticalAlignment="Center"
                                   Grid.Row="0" Grid.Column="0">
                            <TextBlock.ContextMenu>
