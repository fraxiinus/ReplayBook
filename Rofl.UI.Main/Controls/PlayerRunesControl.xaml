                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding Value2}"
                                   TextAlignment="Left"
                                   Width="40" VerticalAlignment="Center"
                                   Grid.Row="0" Grid.Column="0">
                            <TextBlock.ContextMenu>
