                    <ui:SimpleStackPanel HorizontalAlignment="Left"
                                             Orientation="Horizontal">
                        <TextBlock Text="B:" Padding="0 0 5 0"
                                       FontWeight="Bold"/>
                        <TextBlock Text="{Binding Value1}"
                                   TextAlignment="Left"
