                    xmlns:local="clr-namespace:Fraxiinus.ReplayBook.UI.Main.Resources">
    <SolidColorBrush x:Key="PrimaryColor" Color="Blue" />
    <SolidColorBrush x:Key="BackgroundColor" Color="#FFFFFF" />
    <SolidColorBrush x:Key="AccentColorDark3" Color="#272727" />
    <SolidColorBrush x:Key="AccentColorDark2" Color="#313131" />
    <SolidColorBrush x:Key="AccentColorDark1" Color="#3B3B3B" />
    <SolidColorBrush x:Key="AccentColor" Color="#454545" />
    <SolidColorBrush x:Key="AccentColorLight1" Color="#5C5C5C" />
    <SolidColorBrush x:Key="AccentColorLight2" Color="#747474" />
    <SolidColorBrush x:Key="AccentColorLight3" Color="#BABABA" />

    <SolidColorBrush x:Key="DarkTextColor" Color="Black" />
    <SolidColorBrush x:Key="LightTextColor" Color="White" />

    <SolidColorBrush x:Key="BlueTeamAccent" Color="#2747e8" />
    <SolidColorBrush x:Key="RedTeamAccent" Color="#cb2124" />

    <!--  used to get tab backgrounds to be flush with surroundings  -->
